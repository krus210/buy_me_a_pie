<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">

    <ImageView
        android:id="@+id/imageViewPostItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_image_size"
        tools:background="@color/colorGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/show_image"/>

    <TextView
        android:id="@+id/textViewAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPostItem"
        android:layout_marginStart="@dimen/margin_start_end_post_item"
        android:layout_marginEnd="@dimen/margin_start_end_post_item"
        android:layout_marginTop="@dimen/margin_top_post_item"
        android:textColor="@color/colorBlack"
        tools:text="@string/author"
        android:background="@color/colorGrey"/>

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorGrey"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAuthor"
        tools:text="@string/description"
        android:layout_marginStart="@dimen/margin_start_end_post_item"
        android:layout_marginEnd="@dimen/margin_start_end_post_item"
        android:layout_marginTop="@dimen/margin_top_post_item"
        android:layout_marginBottom="@dimen/margin_start_end_post_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>